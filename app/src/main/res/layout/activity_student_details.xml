<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sdlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label1"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Room number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:layout_below="@+id/label1"
            android:id="@+id/spinner_getbedroomsd" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/editextbg"
            android:textAlignment="center"
            android:hint= "Room No."/>

        <TextView
            android:layout_below="@+id/spinner_getbedroomsd"
            android:id="@+id/label2"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Bed number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinner_getbedsd" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/label2"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/editextbg"
            android:textAlignment="center"
            android:hint="Bed No."/>


        <EditText
            android:id="@+id/sname_edtd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner_getbedsd"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editextbg"
            android:hint="Enter Name"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/semail_edtd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/sname_edtd"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editextbg"
            android:hint="Enter Email"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/scontact_edtd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/semail_edtd"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editextbg"
            android:hint="Enter Contact"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/scontactemergency_edtd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/scontact_edtd"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editextbg"
            android:hint="Enter Emergency Contact"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/sadd_editextd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/scontactemergency_edtd"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/editextbg"
            android:hint="Enter Address"
            android:maxLines="1"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/sadd_editextd"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/student_update_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text="Update Student" />

            <Button
                android:id="@+id/student_delete_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:text="Remove Student" />

        </LinearLayout>

        <Button
            android:id="@+id/remove_assignmentbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonbg"
            android:text="Remove Assignment" />

    </RelativeLayout>
</ScrollView>