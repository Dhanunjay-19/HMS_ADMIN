<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hmsadmin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hostel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hostel"
        android:supportsRtl="true"
        android:theme="@style/Theme.HMSADMIN"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".AttendanceActivity"
            android:exported="true"
            android:parentActivityName=".AttendanceActivity" />
        <activity
            android:name=".StudentDetailsActivity"
            android:exported="true"
            android:parentActivityName=".StudentDetailsActivity" />
        <activity
            android:name=".StudentsActivity"
            android:exported="true"
            android:parentActivityName=".StudentsActivity" />
        <activity
            android:name=".AddStudentActivity"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllBedActivity"
            android:exported="true"
            android:parentActivityName=".AllBedActivity" />
        <activity
            android:name=".RoomDetailsActivity"
            android:exported="true"
            android:parentActivityName=".RoomDetailsActivity" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".AddRoomActivity"
            android:exported="true"
            android:parentActivityName=".AddRoomActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>